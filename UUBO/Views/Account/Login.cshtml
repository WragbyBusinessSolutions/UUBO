@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Log in";
    Layout = "_LayoutAuth";
}

<div class="container">
    <div class="col-md-4 ml-auto mr-auto">
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" class="form" method="post">
            <div class="card card-login card-plain">
                <div class="card-header ">
                    <div class="logo-container">
                        <img src="~/img/now-logo.png" alt="">
                    </div>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>

                <span asp-validation-for="Email" class="text-danger"></span>
                <p></p>
                <span asp-validation-for="Password" class="text-danger"></span>

                <div class="card-body ">
                    <div class="input-group no-border form-control-lg">
                        <span class="input-group-addon">
                            <i class="now-ui-icons users_circle-08"></i>
                        </span>
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                    </div>
                    <div class="input-group no-border form-control-lg">
                        <span class="input-group-addon">
                            <i class="now-ui-icons text_caps-small"></i>
                        </span>
                        <input asp-for="Password" class="form-control" placeholder="Password" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe" />
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-round btn-lg btn-block mb-3">Log in</button>
                    <div class="pull-right">
                        <h6>
                            <a asp-action="ForgotPassword" class="link footer-link">Forgot your Password ?</a>
                        </h6>
                    </div>

                </div>

               
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}


